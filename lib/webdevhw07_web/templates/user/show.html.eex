<%if have_current_user?(@conn) do%>
  <h1>Show User</h1>

  <ul>

    <li>
      <strong>Name:</strong>
      <%= @user.name %>
    </li>

    <li>
      <strong>Email:</strong>
      <%= @user.email %>
    </li>

  </ul>

  <p>
    <span><%= link "Edit", to: Routes.user_path(@conn, :edit, @user) %></span>
    <span><%= link "Back", to: Routes.user_path(@conn, :index) %></span>
  </p>
<%else %>
  <h1> Need to Login to see this</h1>
<%end %>
